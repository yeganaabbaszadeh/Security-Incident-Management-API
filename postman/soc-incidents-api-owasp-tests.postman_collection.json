    {
      "name": "A03 – Injection & Validation Tests",
      "item": [
        {
          "name": "Create incident – normal (baseline)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Baseline incident for tests\",\n  \"description\": \"This incident is used as a baseline for injection tests.\",\n  \"severity\": \"medium\",\n  \"source_ip\": \"203.0.113.20\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/incidents",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "incidents"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Baseline incident creation should return 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "if (json.id) {",
                  "    pm.collectionVariables.set('last_incident_id', json.id);",
                  "    console.log('Stored last_incident_id:', json.id);",
                  "} else {",
                  "    console.log('No id in baseline incident response');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create incident – oversized title (should fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
