  "item": [
    {
      "name": "A07 – Auth & Login Tests",
      "item": [
        {
          "name": "Login – valid (secadmin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"secadmin\",\n  \"password\": \"S0C*M4n4g3r\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login should succeed with 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "if (json.access_token) {",
                  "    pm.collectionVariables.set('token', json.access_token);",
                  "    console.log('Stored access token: ' + json.access_token);",
                  "} else {",
                  "    console.log('No access_token returned');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
